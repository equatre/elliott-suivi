body { font-family: sans-serif; margin: 0; padding: 0; }
h1 { text-align: center; margin: 10px; }
#map { height: 90vh; width: 100%; }
#status {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(255,255,255,0.9);
    padding: 5px 10px;
    font-size: 0.9em;
    border-radius: 5px;
    box-shadow: 0 0 5px rgba(0,0,0,0.2);
    z-index: 1000;
}
